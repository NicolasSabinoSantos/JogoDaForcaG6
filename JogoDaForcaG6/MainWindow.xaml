        <TextBlock x:Name="txt_tronco" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Height="95" Width="60" FontSize="72" TextAlignment="Center" Margin="241,185,0,0" Foreground="#FFFFC90E"><Run Language="pt-br" Text="I"/></TextBlock>
        <TextBlock x:Name="txt_bracoD" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Height="95" Width="58" FontSize="72" TextAlignment="Center" Margin="273,184,0,0" RenderTransformOrigin="0.5,0.5" Foreground="#FFFFC90E">
            <TextBlock.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="89.245"/>
