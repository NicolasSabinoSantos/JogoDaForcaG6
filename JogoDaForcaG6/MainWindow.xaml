        <TextBlock x:Name="txt_erros1" HorizontalAlignment="Left" Margin="152,83,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="238" Height="57" FontSize="29" TextAlignment="Center" Foreground="#FFFFC90E" Text="_._._._._._._._._._._"/>

