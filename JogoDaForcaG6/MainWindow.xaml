            </TextBlock.RenderTransform><Run Language="pt-br" Text="I"/></TextBlock>
        <TextBlock x:Name="txt_pernaD" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Height="95" Width="58" FontSize="72" TextAlignment="Center" Margin="263,233,0,0" RenderTransformOrigin="0.5,0.5" Foreground="#FFFFC90E">
